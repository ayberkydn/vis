{
  "dockerFile": "./Dockerfile",
  "initializeCommand": "git pull",
  "mounts": [
    "source=${localEnv:HOME}/.cache,target=/home/user/.cache,type=bind"
  ],
  "runArgs": ["--runtime=nvidia"],
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "esbenp.prettier-vscode"
  ]
}
